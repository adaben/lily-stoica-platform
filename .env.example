# LiLy Stoica Platform - Environment Variables
# Copy to .env and fill in actual values.

# Django
DJANGO_ENV=prod
DJANGO_SECRET_KEY=change-me-to-a-real-secret-key
DJANGO_DEBUG=False

# Database (production)
DB_NAME=lily_db
DB_USER=lily_user
DB_PASSWORD=change-me
DB_HOST=db
DB_PORT=5432

# CORS / Hosts
CORS_ALLOWED_ORIGINS=https://lily.perennix.io
CSRF_TRUSTED_ORIGINS=https://lily.perennix.io
ALLOWED_HOSTS=lily.perennix.io,lilystoica.com,localhost,127.0.0.1,lily_backend
FRONTEND_URL=https://lily.perennix.io

# Stripe
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# Docker registry (same as SNF)
REGISTRY=localhost:5000

# Frontend port (mapped on host â€” NPM proxies to this)
FRONTEND_PORT=8091
